weight = float(input("Enter your weight: "))
unit = input("(K)g or (L)bs: ")
if unit.upper() == "K":
    converted1 = (weight * 2.20462262)
    print("Your weight in pounds is", round(converted1, 2))
elif unit.upper() == "L":
    converted2 = (weight * 0.45359237)
    print("Your weight in kilograms is", round(converted2, 2)) 
